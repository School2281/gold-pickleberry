[Unit]
Description=Mandelbrot Fractal Generator for DoS Testing
After=network.target nginx.service
Wants=network.target

[Service]
Type=simple
User=www-data
WorkingDirectory=/var/www/html/fractal
ExecStart=/usr/bin/python3 /var/www/html/fractal/app.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

# Resource limits for testing (remove or adjust for production)
# MemoryLimit=256M
# CPUQuota=50%

[Install]
WantedBy=multi-user.target
